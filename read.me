    function renderTable(){
      const items = DATA[currentTab] || [];
      const q = (searchEl.value || "").toLowerCase().trim();

      const filtered = q
        ? items.filter(x =>
            (x.name||"").toLowerCase().includes(q) ||
            (x.ip||"").toLowerCase().includes(q) ||
            (x.url||"").toLowerCase().includes(q) ||
