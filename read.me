<div class="toast" id="toast">ë³µì‚¬ë¨</div>

<script>
  // âœ… ìˆ˜ë™ ì…ë ¥í•˜ê¸° ì‰¬ìš´ ë°ì´í„° êµ¬ì—­ (ì—¬ê¸°ë§Œ í¸ì§‘í•˜ë©´ ë¨)
  const DATA = {
    "A": [
      { name:"A-í…ŒìŠ¤íŠ¸1", ip:"1.1.1.1", url:"https://google.com", user:"user1", pass:"pass1!" },
      { name:"A-í…ŒìŠ¤íŠ¸2", ip:"1.1.1.2", url:"https://google.com", user:"user2", pass:"pass2!" },
      { name:"A-í…ŒìŠ¤íŠ¸3", ip:"1.1.1.3", url:"https://google.com", user:"user3", pass:"pass3!" },
    ],
    "B": [
      { name:"B-í…ŒìŠ¤íŠ¸1", ip:"2.2.2.1", url:"https://google.com", user:"user1", pass:"pass1!" },
      { name:"B-í…ŒìŠ¤íŠ¸2", ip:"2.2.2.2", url:"https://google.com", user:"user2", pass:"pass2!" },
    ],
    "C": [
      { name:"C-í…ŒìŠ¤íŠ¸1", ip:"3.3.3.1", url:"https://google.com", user:"user1", pass:"pass1!" },
    ],
  };

  let currentTab = Object.keys(DATA)[0] || "A";

  const tabsEl = document.getElementById("tabs");
  const rowsEl = document.getElementById("rows");
  const searchEl = document.getElementById("search");
  const countBadge = document.getElementById("countBadge");
  const tabTitle = document.getElementById("tabTitle");
  const tabMeta = document.getElementById("tabMeta");
  const toast = document.getElementById("toast");

  function renderTabs(){
    tabsEl.innerHTML = "";
    Object.keys(DATA).forEach(t => {
      const d = document.createElement("div");
      d.className = "tab" + (t === currentTab ? " active" : "");
      d.textContent = t;
      d.onclick = () => {
        currentTab = t;
        searchEl.value = "";
        renderTabs();
        renderTable();
        window.scrollTo({ top: 0, behavior: "smooth" });
      };
      tabsEl.appendChild(d);
    });
  }

  function renderTable(){
    const items = DATA[currentTab] || [];
    const q = (searchEl.value || "").toLowerCase().trim();

    const list = q
      ? items.filter(x => [x.name, x.ip, x.url, x.user, x.pass].join(" ").toLowerCase().includes(q))
      : items;

    tabTitle.textContent = currentTab;
    tabMeta.textContent = `ì´ ${items.length}ê°œ Â· ê²€ìƒ‰ ${list.length}ê°œ`;
    countBadge.textContent = `${list.length} / ${items.length}`;

    rowsEl.innerHTML = "";
    list.forEach((x, i) => {
      rowsEl.innerHTML += `
        <tr>
          <td>${i+1}</td>
          <td>${escapeHtml(x.name)}</td>
          <td class="mono">${escapeHtml(x.ip)}<button class="copy" data-copy="${escapeAttr(x.ip)}">Copy</button></td>
          <td>
            <a href="${escapeAttr(x.url)}" target="_blank" rel="noopener">ì—´ê¸°</a>
            <button class="copy" data-copy="${escapeAttr(x.url)}">Copy</button>
          </td>
          <td class="mono">${escapeHtml(x.user)}<button class="copy" data-copy="${escapeAttr(x.user)}">Copy</button></td>
          <td class="mono">${escapeHtml(x.pass)}<button class="copy" data-copy="${escapeAttr(x.pass)}">Copy</button></td>
        </tr>
      `;
    });
  }

  document.addEventListener("click", async (e) => {
    const b = e.target.closest(".copy");
    if(!b) return;
    const value = b.dataset.copy || "";
    try{
      await navigator.clipboard.writeText(value);
    }catch{
      // fallback
      const ta = document.createElement("textarea");
      ta.value = value;
      document.body.appendChild(ta);
      ta.select();
      document.execCommand("copy");
      ta.remove();
    }
    toast.classList.add("show");
    setTimeout(() => toast.classList.remove("show"), 900);
  });

  searchEl.addEventListener("input", renderTable);
  document.getElementById("clearSearchBtn").addEventListener("click", () => {
    searchEl.value = "";
    renderTable();
  });

  function escapeHtml(str){
    return String(str ?? "")
      .replaceAll("&","&amp;")
      .replaceAll("<","&lt;")
      .replaceAll(">","&gt;")
      .replaceAll('"',"&quot;")
      .replaceAll("'","&#39;");
  }
  function escapeAttr(str){ return escapeHtml(str); }

  renderTabs();
  renderTable();
</script>
